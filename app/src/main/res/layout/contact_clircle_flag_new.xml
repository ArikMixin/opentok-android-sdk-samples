<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <io.wochat.app.components.CircleImageView
        android:id="@+id/contact_pic_civ"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_empty_contact_1"/>

    <io.wochat.app.components.CircleImageView
        android:id="@+id/contact_flag_civ"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/flag_united_kingdom"
        app:civ_border_color="@color/whitee"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/contact_pic_civ"
        app:layout_constraintEnd_toEndOf="@+id/contact_pic_civ"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".4"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".4"/>
</android.support.constraint.ConstraintLayout>