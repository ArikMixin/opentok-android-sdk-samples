<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingTop="5dp">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <android.support.constraint.ConstraintLayout
            android:id="@id/bubble"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:background="@color/audio_msg_back_outgoing"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingRight="20dp"
            android:paddingTop="0dp">


            <ImageView
                android:id="@+id/play_pause_iv"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:scaleType="center"
                android:src="@drawable/msg_audio_play_orange"
                android:tint="@color/app_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/messageUserAvatar"
                app:layout_constraintTop_toTopOf="parent"/>


            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:progress="0"
                android:progressBackgroundTint="@color/black"
                android:progressTint="@color/audio_msg_text"
                android:thumb="@drawable/msg_audio_progress_dot_orange"
                android:thumbTint="@color/app_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/play_pause_iv"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:25"
                android:textSize="9sp"
                app:layout_constraintStart_toStartOf="@+id/seekbar"
                app:layout_constraintTop_toBottomOf="@+id/seekbar"/>


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:text="00:25"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="@+id/seekbar"
                app:layout_constraintTop_toBottomOf="@+id/seekbar"/>


            <ImageView
                android:id="@+id/coche_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:src="@drawable/coche_seen"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/time"
                app:layout_constraintStart_toEndOf="@+id/time"
                app:layout_constraintTop_toTopOf="@+id/time"/>

            <io.wochat.app.components.CircleFlagImageView
                android:id="@id/messageUserAvatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_action_empty_contact"
                app:civ_border_color="@color/app_blue"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <io.wochat.app.components.CircleImageView
                android:id="@id/magicIndicatorCIV"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/flag_israel"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        </android.support.constraint.ConstraintLayout>


    </FrameLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/fl"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/transfer"/>

</RelativeLayout>