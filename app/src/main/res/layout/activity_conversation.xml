<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Messages.ConversationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_padding_top"
            android:paddingBottom="@dimen/appbar_padding_bottom"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="?attr/colorPrimary"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:itemIconTint="@android:color/white"
                app:title="">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >

                    <io.wochat.app.components.CircleImageView
                        android:id="@+id/contact_avatar_old_civ"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:visibility="gone"
                        android:src="@mipmap/ic_launcher"/>

                    <io.wochat.app.components.CircleFlagImageView
                        android:id="@+id/contact_avatar_civ"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/a_nd_logo_white">

                    </io.wochat.app.components.CircleFlagImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/contact_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alexanne barber"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/white"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/contact_details_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Everytime , anytime!"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/white50"
                            android:textSize="10sp"
                            android:textStyle="normal"/>


                    </LinearLayout>


                </LinearLayout>



            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>



        <RelativeLayout
            android:id="@+id/main_layout_rl"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">






            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/input"
                android:scaleType="centerCrop"
                android:background="@color/white"
                />

            <com.stfalcon.chatkit.messages.MessagesList
                android:id="@+id/messagesList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/input_padder_ll"

                app:incomingAvatarHeight="0dp"
                app:incomingAvatarWidth="0dp"
                app:incomingImageTimeTextColor="@color/white"
                app:incomingTextColor="@color/black"
                app:incomingTimeTextColor="@color/black"
                app:incomingDefaultBubbleColor="@color/incoming_bubble"
                app:incomingDefaultBubblePressedColor="@color/incoming_bubble"
                app:incomingDefaultBubbleSelectedColor="@color/blue_semi_transparent"

                app:outcomingImageTimeTextColor="@color/white"
                app:outcomingTextColor="@color/black"
                app:outcomingTimeTextColor="@color/black"
                app:outcomingDefaultBubbleColor="@color/outcoming_bubble"
                app:outcomingDefaultBubblePressedColor="@color/outcoming_bubble"
                app:outcomingDefaultBubbleSelectedColor="@color/blue_semi_transparent"
                 />

            <LinearLayout
                android:id="@+id/input_padder_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_above="@+id/input"
                android:background="@color/white"
                android:orientation="horizontal">

            </LinearLayout>


            <com.stfalcon.chatkit.messages.MessageInput
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"

                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"


                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="1dp"
                app:attachmentButtonBackground="?attr/selectableItemBackgroundBorderless"
                app:attachmentButtonDefaultIconColor="@color/green"
                app:attachmentButtonDefaultIconPressedColor="@color/green_dark"
                app:attachmentButtonHeight="27dp"

                app:attachmentButtonIcon="@drawable/msg_in_attachment_dark"
                app:attachmentButtonWidth="27dp"
                app:cameraButtonBackground="?attr/selectableItemBackgroundBorderless"
                app:cameraButtonDefaultIconColor="@color/green"
                app:cameraButtonDefaultIconPressedColor="@color/green_dark"
                app:cameraButtonHeight="27dp"

                app:cameraButtonIcon="@drawable/msg_in_camera_dark"
                app:cameraButtonWidth="27dp"

                app:magicButtonIcon="@drawable/flag_israel"
                app:locationButtonIcon="@drawable/msg_in_location_dark"
                app:videoButtonIcon="@drawable/msg_in_video_dark"

                app:inputButtonBackground="@drawable/msg_in_send_back"
                app:inputButtonDefaultIconColor="@color/white"
                app:inputButtonDefaultIconDisabledColor="@color/white60"
                app:inputButtonIcon="@drawable/msg_in_mic_light"
                app:inputButtonMargin="15dp"
                app:inputHint="@string/hint_enter_a_message"
                app:inputMaxLines="5"
                app:showAttachmentButton="true"
                app:showCameraButton="true"
                app:showLocationButton="true"
                app:showVideoButton="true"
                app:showMagicButton="true"/>


            <ImageView
                android:id="@+id/recording_big_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-13dp"
                android:layout_marginRight="-8dp"
                android:src="@drawable/mic_recording_big"
                android:visibility="visible"/>

            <ImageButton
                android:id="@+id/scroll_end_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="100dp"
                android:layout_marginEnd="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/double_arrow"/>


        </RelativeLayout>

    </LinearLayout>


    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/preview_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black80"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/preview_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"/>


</FrameLayout>