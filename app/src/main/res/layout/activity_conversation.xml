<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Messages.ConversationActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >

                <io.wochat.app.components.CircleImageView
                    android:id="@+id/contact_avatar_civ"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/contact_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Alexanne barber"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white"
                    android:textStyle="normal"/>


            </LinearLayout>



        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>



    <RelativeLayout
        android:id="@+id/main_layout_rl"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">






        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/input"
            android:scaleType="centerCrop"
            android:background="@color/white"
            />

        <com.stfalcon.chatkit.messages.MessagesList
            android:id="@+id/messagesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/input_padder_ll"
            app:incomingAvatarHeight="0dp"
            app:incomingAvatarWidth="0dp"
            app:incomingImageTimeTextColor="@color/white"
            app:incomingTextColor="@color/black"
            app:incomingTimeTextColor="@color/black"
            app:outcomingImageTimeTextColor="@color/white"
            app:outcomingTextColor="@color/black"
            app:outcomingTimeTextColor="@color/black"
            app:outcomingDefaultBubbleColor="@color/outcoming_bubble"
            app:incomingDefaultBubbleColor="@color/incoming_bubble"/>

        <LinearLayout
            android:id="@+id/input_padder_ll"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_above="@+id/input"
            android:background="@color/white"
            android:orientation="horizontal">

        </LinearLayout>









        <com.stfalcon.chatkit.messages.MessageInput
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"

            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"


            android:paddingTop="1dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="1dp"
            app:attachmentButtonBackground="?attr/selectableItemBackgroundBorderless"
            app:attachmentButtonDefaultIconColor="@color/green"
            app:attachmentButtonDefaultIconPressedColor="@color/green_dark"
            app:attachmentButtonHeight="27dp"

            app:attachmentButtonIcon="@drawable/attach"
            app:attachmentButtonWidth="27dp"
            app:cameraButtonBackground="?attr/selectableItemBackgroundBorderless"
            app:cameraButtonDefaultIconColor="@color/green"
            app:cameraButtonDefaultIconPressedColor="@color/green_dark"
            app:cameraButtonHeight="27dp"

            app:cameraButtonIcon="@drawable/camera"
            app:cameraButtonWidth="27dp"
            app:imojiButtonBackground="?attr/selectableItemBackgroundBorderless"
            app:imojiButtonDefaultIconColor="@color/green"
            app:imojiButtonDefaultIconPressedColor="@color/green_dark"
            app:imojiButtonHeight="27dp"
            app:imojiButtonIcon="@drawable/smiley"
            app:imojiButtonWidth="27dp"
            app:inputButtonBackground="@color/transparent"
            app:inputButtonDefaultIconColor="@color/white"
            app:inputButtonDefaultIconDisabledColor="@color/white60"
            app:inputButtonIcon="@drawable/mic"
            app:inputButtonMargin="15dp"
            app:inputHint="@string/hint_enter_a_message"
            app:inputMaxLines="5"
            app:showAttachmentButton="true"
            app:showCameraButton="true"
            app:showImojiButton="true"/>


        <ImageButton
            android:id="@+id/scroll_end_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="100dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/double_arrow"/>





    </RelativeLayout>

</LinearLayout>