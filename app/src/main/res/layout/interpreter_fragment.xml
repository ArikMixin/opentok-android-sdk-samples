<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_ll"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="2"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.Interpreter.InterpreterFragment">

    <!--Top -->
        <RelativeLayout
            android:id="@+id/top_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/top_inside_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rotation="180"
                android:background="@null">


                <ImageView
                    android:id="@+id/top_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <!--<TextView-->
                    <!--android:id="@+id/top_tv"-->
                    <!--android:textSize="32dp"-->
                    <!--android:visibility="gone"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginRight="20dp"-->
                    <!--android:layout_alignParentTop="true"-->
                    <!--android:layout_marginTop="60dp"-->
                    <!--android:gravity="center"-->
                    <!--android:text="Appuyer et maintenir appuyer"/>-->

                <me.grantland.widget.AutofitTextView
                    android:layout_marginTop="30dp"
                    android:id="@+id/top_tv"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:layout_alignParentTop="true"
                    android:layout_above="@+id/mic_top_iv"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textSize="32dp"
                    android:text="Appuyer et maintenir appuyer"
                    autofit:minTextSize="20dp"
                    />


                <TextView
                    android:id="@+id/listening_top_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/mic_top_iv"
                    android:text="@string/listening"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:textColor="#A8A6A6"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:id="@+id/mic_top_iv"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/interpreter_talk"
                    />
            </RelativeLayout>


            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/rotation_iv"
                android:padding="15dp"
                android:scaleType="fitXY"
                android:elevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rotation"
                />

            <io.slatch.app.components.CircleImageView
                android:id="@+id/top_flag_civ"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:elevation="8dp"
                android:paddingBottom="15dp"
                android:visibility="gone"
                android:src="@drawable/flag_france"
                app:civ_border_color="@color/warm_grey"
                app:civ_border_overlay="true"
                app:civ_border_width="0.1dp" />

        </RelativeLayout>

    <!--Bottom -->
        <RelativeLayout
            android:id="@+id/bottom_rl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@null"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/bottom_iv"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!--<TextView-->
                <!--android:id="@+id/bottom_tv"-->
                <!--android:textSize="32dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginRight="20dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="@color/black"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:gravity="center"-->
                <!--android:layout_marginTop="60dp"-->
                <!--android:text=""/>-->

            <me.grantland.widget.AutofitTextView
                android:layout_marginTop="30dp"
                android:id="@+id/bottom_tv"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/mic_bottom_iv"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:textSize="32dp"
                autofit:minTextSize="20dp"
                />

            <TextView
                android:id="@+id/listening_bottom_tv"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mic_bottom_iv"
                android:text="@string/listening"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:textColor="#A8A6A6"
                android:textSize="20dp"
                />

            <ImageView
                    android:id="@+id/mic_bottom_iv"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/interpreter_talk"
                />

            <io.slatch.app.components.CircleImageView
                android:id="@+id/bottom_flag_civ"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:elevation="8dp"
                android:paddingBottom="15dp"
                android:visibility="gone"
                android:src="@drawable/flag_israel"
                app:civ_border_color="@color/warm_grey"
                app:civ_border_overlay="true"
                app:civ_border_width="0.1dp"
                />
</RelativeLayout>

 </LinearLayout>