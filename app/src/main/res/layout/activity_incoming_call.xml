<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_background"
    tools:context=".ui.AudioVideoCall.IncomingCallActivity">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/back_navigation_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/back_navigation_iv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/navigation_bar" />
        </FrameLayout>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>


    <!--Video Main-->
    <RelativeLayout
        android:id="@+id/main_video_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/speaker_iv"
        app:layout_constraintTop_toBottomOf="@+id/title_rl">


        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/circle_small_rl"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="40dp"
                >
                <io.wochat.app.components.CircleImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/participant_pic_video_civ"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:paddingBottom="10dp"
                    android:src="@color/blue"
                    android:elevation="8dp"
                    app:civ_border_color="@color/warm_grey"
                    app:civ_border_overlay="true"
                    app:civ_border_width="0.1dp"
                    />
                <io.wochat.app.components.CircleImageView
                    android:id="@+id/participant_pic_flag_video_civ"
                    android:layout_toRightOf="@+id/participant_pic_video_civ"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="-40dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/flag_israel"
                    android:elevation="8dp"
                    app:civ_border_color="@color/warm_grey"
                    app:civ_border_overlay="true"
                    app:civ_border_width="0.1dp"

                    />

            </RelativeLayout>


<RelativeLayout
    android:layout_toRightOf="@+id/circle_small_rl"
    android:layout_width="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp">

            <TextView
            android:id="@+id/participant_name_video_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaa"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/participant_lang_video_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participant_name_video_tv"
            android:layout_marginTop="0dp"
            android:text="aaaaaaaaa"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold" />
</RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <!--Audio Main-->
    <RelativeLayout
        android:id="@+id/main_audio_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/speaker_iv"
        app:layout_constraintTop_toBottomOf="@+id/title_rl"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:id="@+id/participant_name_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/participant_name_audio_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="27dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/participant_name_audio_tv"
                >

                <ImageView
                    android:id="@+id/communication_video_iv"
                    android:layout_width="26dp"
                    android:layout_height="26dp"

                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_action_video_w" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/participant_lang_audio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participant_name_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/participant_lang_audio_tv"
            android:layout_above="@+id/status_tv"
         >

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="210dp">
        <io.wochat.app.components.CircleImageView
            android:layout_centerInParent="true"
            android:id="@+id/participant_pic_audio_civ"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:paddingBottom="15dp"
            android:src="@color/blue"
            android:elevation="8dp"
            app:civ_border_color="@color/warm_grey"
            app:civ_border_overlay="true"
            app:civ_border_width="0.1dp"
            />
                <io.wochat.app.components.CircleImageView
                    android:id="@+id/participant_pic_flag_audio_civ"
                    android:layout_toRightOf="@+id/participant_pic_audio_civ"
                    android:paddingBottom="15dp"
                    android:layout_marginLeft="-80dp"
                    android:layout_marginTop="0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/flag_israel"
                    android:elevation="8dp"
                    app:civ_border_color="@color/warm_grey"
                    app:civ_border_overlay="true"
                    app:civ_border_width="0.1dp"

                    />

     </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="@string/calling"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_above="@+id/participant_number_audio_tv"
    />

        <TextView
            android:id="@+id/participant_number_audio_tv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_alignParentBottom="true"
      />

    </RelativeLayout>

    <ImageView
        android:id="@+id/speaker_iv"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_speaker"
        app:layout_constraintBottom_toBottomOf="@+id/translate_rl"
        app:layout_constraintEnd_toStartOf="@+id/translate_rl"
        app:layout_constraintStart_toStartOf="parent"></ImageView>


    <ImageView
        android:id="@+id/mute_iv"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_mute_whole"
        app:layout_constraintBottom_toBottomOf="@+id/translate_rl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/translate_rl" />


    <RelativeLayout
        android:id="@+id/translate_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/camera_switch_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <io.wochat.app.components.CircleImageView
            android:id="@+id/mic_flag_civ"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_centerInParent="true"
            android:alpha="0.3"
            android:src="@drawable/flag_united_states_of_america" />

        <ImageView
            android:id="@+id/translator_mic_iv"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_translator_disabled" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/camera_switch_iv"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/ic_camera_switch"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/hang_up_rl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hang_up_rl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp">
            <io.wochat.app.components.CircleImageView
                android:id="@+id/hang_up_civ"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerInParent="true"
                android:src="@color/red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </io.wochat.app.components.CircleImageView>

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/hang_up_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_action_speaker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>