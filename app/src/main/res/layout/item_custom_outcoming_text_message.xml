<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentRL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:minWidth="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:orientation="vertical">


        <io.wochat.app.components.MessageReplyLayout
            android:id="@+id/reply_layout"
            android:minWidth="250dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </io.wochat.app.components.MessageReplyLayout>

        <io.wochat.app.components.CircleImageView
            android:id="@id/magicIndicatorCIV"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/flag_israel"/>

        <TextView
            android:id="@id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5sp"
            android:text="fgdsgfds fdg dfs gfdsg fdsg fdsg fds"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@id/messageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/bubble"
                android:layout_alignStart="@id/bubble"
                android:layout_below="@id/messageText"
                android:text="8:55"/>

            <ImageView
                android:id="@+id/coche_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/coche_seen"/>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>