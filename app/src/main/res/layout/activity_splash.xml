<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splase_back"
    android:gravity="center"
    tools:context=".ui.SplashActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="182dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/splash_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/first_enter_ll"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        android:layout_weight="1">

        <TextView
            android:id="@+id/read_terms_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="@string/splash_read_our_terms"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/agree_btn"
            android:text="@string/splash_agree_and_continue"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/progress_rl"
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/version_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:indeterminateDrawable="@drawable/progress_custom"></ProgressBar>

       <TextView
           android:id="@+id/version_tv"
           android:layout_centerHorizontal="true"
           android:text=""
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15dp"
           android:textColor="@color/splash_blue_text"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="84dp"
           />

    </RelativeLayout>

</RelativeLayout>