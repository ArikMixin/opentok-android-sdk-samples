<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_background"
    tools:context=".ui.AudioVideoCall.OutGoingCallActivity">

    <RelativeLayout
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="81dp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:id="@+id/back_navigation_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/navigation_bar"/>
        <TextView
            android:id="@+id/title_tv"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text=" "
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/speaker_iv"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/speaker"
        app:layout_constraintBottom_toTopOf="@+id/hang_up_iv"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="parent"></ImageView>


    <ImageView
        android:id="@+id/mute_iv"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/mute_whole"
        app:layout_constraintBottom_toTopOf="@+id/hang_up_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relativeLayout" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/hang_up_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <io.wochat.app.components.CircleImageView
            android:id="@+id/mic_flag_civ"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_centerInParent="true"
            android:alpha="0.2"
            android:src="@drawable/flag_united_states_of_america" />

        <ImageView
            android:id="@+id/translator_mic_iv"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/translator_disabled" />

    </RelativeLayout>



    <ImageView
        android:id="@+id/hang_up_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hang_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>