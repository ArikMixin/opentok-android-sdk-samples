<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="5dp">


    <FrameLayout
        android:id="@id/image_wrapper_fl"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp">

        <com.stfalcon.chatkit.utils.RoundedImageView
            android:id="@id/image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_icon"
            android:layout_gravity="center"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/black10"
            android:gravity="center_vertical"
            android:minHeight="32dp"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_video"
                android:tint="@color/white"/>

            <TextView
                android:id="@id/videoDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:55"
                android:textColor="@color/white"/>

        </LinearLayout>


    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_wrapper_fl"
        android:layout_alignRight="@id/image_wrapper_fl"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/black10"
        android:gravity="right|center_vertical"
        android:minHeight="32dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@id/messageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:55"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/coche_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@drawable/coche_seen"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/image_wrapper_fl"
        android:background="@android:color/transparent"
        android:src="@drawable/transfer"


        />


</RelativeLayout>