<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_background"
    tools:context=".ui.AudioVideoCall.CallActivity">

    <FrameLayout
        android:id="@+id/subscriber_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/camera_pause_full_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pause_grey"
        android:visibility="gone">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:alpha="0.6"
            android:scaleType="fitXY"
            android:src="@drawable/ic_camera_pause" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/back_navigation_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/back_navigation_iv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/navigation_bar" />
        </FrameLayout>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14dp" />

        <Chronometer
            android:id="@+id/timer_chr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="gone" />
    </RelativeLayout>

    <!--Video Main-->
    <RelativeLayout
        android:id="@+id/main_video_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/inside_call_btns_cl"
        app:layout_constraintTop_toBottomOf="@+id/title_rl">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:id="@+id/circle_small_rl"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp">

                <io.wochat.app.components.CircleImageView
                    android:id="@+id/participant_pic_video_civ"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:elevation="8dp"
                    android:paddingBottom="10dp"
                    android:src="@color/blue"
                    app:civ_border_color="@color/warm_grey"
                    app:civ_border_overlay="true"
                    app:civ_border_width="0.1dp" />




                <io.wochat.app.components.CircleImageView
                    android:id="@+id/participant_pic_flag_video_civ"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="-40dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@+id/participant_pic_video_civ"
                    android:elevation="8dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/flag_israel"
                    app:civ_border_color="@color/warm_grey"
                    app:civ_border_overlay="true"
                    app:civ_border_width="0.1dp"

                    />
            </RelativeLayout>

        <!--    <ImageView
                android:id="@+id/recording_state_video_iv"
                android:visibility="gone"
                android:layout_marginLeft="50dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/recording_state"
                />
-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/circle_small_rl">

                <TextView
                    android:id="@+id/participant_name_video_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/participant_lang_video_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/participant_name_video_tv"
                    android:layout_marginTop="0dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/participant_name_video_tv">

                    <ToggleButton
                        android:id="@+id/camera_btn_video_tb"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/camera_video_selector"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <!--Audio Main-->
    <RelativeLayout
        android:id="@+id/main_audio_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/status_rl"
        app:layout_constraintTop_toBottomOf="@+id/title_rl">

        <RelativeLayout
            android:id="@+id/participant_name_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/participant_name_audio_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="27dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/participant_name_audio_tv">

                <ToggleButton
                    android:id="@+id/camera_btn_audio_tb"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/camera_audio_selector"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/participant_lang_audio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participant_name_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/participant_lang_audio_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:id="@+id/user_pic_audio_rl"
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_centerInParent="true">

                <io.wochat.app.components.CircleImageView
                    android:id="@+id/participant_pic_audio_civ"
                    android:layout_width="210dp"
                    android:layout_height="210dp"
                    android:layout_centerInParent="true"
                    android:elevation="8dp"
                    android:paddingBottom="15dp"
                    android:src="@color/blue"
                    app:civ_border_color="@color/warm_grey"
                    app:civ_border_overlay="true"
                    app:civ_border_width="0.1dp" />



                <io.wochat.app.components.CircleImageView
                    android:id="@+id/participant_pic_flag_audio_civ"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="-80dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@+id/participant_pic_audio_civ"
                    android:elevation="8dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/flag_israel"
                    app:civ_border_color="@color/warm_grey"
                    app:civ_border_overlay="true"
                    app:civ_border_width="0.1dp" />

            </RelativeLayout>
          <!--  <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/recording_state_audio_iv"
                android:layout_marginBottom="15dp"
                android:visibility="visible"
                android:layout_marginLeft="10dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:scaleType="fitXY"
                android:src="@drawable/recording_state"
                />-->


        </RelativeLayout>
    </RelativeLayout>



    <!--Status and phone number-->
    <RelativeLayout
        android:id="@+id/status_rl"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/inside_call_btns_cl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/calling"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/participant_number_audio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_tv"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="17dp" />
    </RelativeLayout>


    <!--Incoming Calls Buttons -->
    <RelativeLayout
        android:id="@+id/incoming_call_btns_rl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decline_rl"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="80dp">

            <io.wochat.app.components.CircleImageView
                android:id="@+id/decline_incoming_civ"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerInParent="true"
                android:src="@color/red">
            </io.wochat.app.components.CircleImageView>

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/hang_up_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_speaker" />

            <TextView
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/decline_incoming_civ"
                android:textColor="@color/white"
                android:text="@string/decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="40dp">

            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/accept_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <io.wochat.app.components.CircleImageView
                    android:id="@+id/accept_incoming_civ"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_centerInParent="true"
                    android:src="@color/blue">
                </io.wochat.app.components.CircleImageView>

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/accept_iv"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_accept_call" />
            </RelativeLayout>

            <TextView
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/accept_rl"
                android:textColor="@color/white"
                android:text="@string/accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </RelativeLayout>




    <!--Inside a call buttons-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/inside_call_btns_cl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone">

        <!--Action Buttons-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/action_btns_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/decline_inside_rl"
            android:layout_marginBottom="35dp"
            android:visibility="gone"
            >

            <ToggleButton
                android:id="@+id/speaker_iv"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:checked="true"
                android:textOn=""
                android:textOff=""
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:scaleType="fitCenter"
                android:background="@drawable/speaker_selector"
                app:layout_constraintBottom_toBottomOf="@+id/translate_rl"
                app:layout_constraintEnd_toStartOf="@+id/translate_rl"
                app:layout_constraintStart_toStartOf="parent"></ToggleButton>


            <ToggleButton
                android:id="@+id/mute_iv"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:scaleType="fitCenter"
                android:background="@drawable/mute_selector"
                android:textOn=""
                android:textOff=""
                android:checked="false"
                app:layout_constraintBottom_toBottomOf="@+id/translate_rl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/translate_rl" />


            <RelativeLayout
                android:id="@+id/translate_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                app:layout_constraintBottom_toTopOf="@+id/camera_switch_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <io.wochat.app.components.CircleImageView
                    android:id="@+id/mic_flag_civ"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:layout_centerInParent="true"
                    android:alpha="0.3"
                    android:src="@drawable/flag_united_states_of_america" />

                <ImageView
                    android:id="@+id/translator_mic_iv"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/translator_mic_disabled" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/camera_switch_iv"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_camera_switch"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/decline_inside_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <io.wochat.app.components.CircleImageView
                android:id="@+id/decline_inside_civ"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_centerInParent="true"
                android:src="@color/red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"></io.wochat.app.components.CircleImageView>

            <ImageView
                android:id="@+id/hang_up_inside_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_speaker"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/publisher_fl"
        android:layout_width="120dp"
        android:layout_height="220dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:padding="1dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/pause_grey"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_camera_pause" />

    </android.support.v7.widget.CardView>


    <FrameLayout
        android:id="@+id/pip_mode_publisher_fl"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"></FrameLayout>


    <FrameLayout
        android:id="@+id/effect_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/black"
        android:visibility="gone" />



    <!--push to talk-->

    <RelativeLayout
        android:id="@+id/push_to_talk_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2000000"
        android:visibility="gone">

        <!--lock rl-->
        <RelativeLayout
            android:id="@+id/lock_rl"
            android:layout_above="@+id/translate_p2t_rl"
            android:visibility="visible"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/lock_iv"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                />

            <ImageView
                android:id="@+id/arrows_iv"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/lock_iv"
                android:layout_centerHorizontal="true"
                android:layout_width="10.5dp"
                android:layout_height="43dp"
                android:src="@drawable/arrows"/>

        </RelativeLayout>

<!-- mic icon -->
        <RelativeLayout
            android:id="@+id/translate_p2t_rl"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="210dp">

            <io.wochat.app.components.CircleImageView
                android:visibility="visible"
                android:id="@+id/mic_flag_p2t_civ"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:layout_centerInParent="true"
                android:alpha="1"
                android:src="@drawable/flag_united_states_of_america" />

            <ImageView
                android:id="@+id/translator_mic_p2t_iv"
                android:layout_width="85dp"
                android:layout_height="85dp"
                    android:layout_marginTop="3dp"
                android:background="@drawable/translator_mic_enabled"
                android:clickable="false"
                android:scaleType="fitXY"
                android:alpha="1"
                android:visibility="visible" />

        </RelativeLayout>


        <TextView
            android:id="@+id/listening_tv"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="185dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="12.3sp"
            android:text="@string/listening"
            android:textColor="#ffffff"
            android:textSize="13dp"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:background="#88808080"
        android:id="@+id/connecting_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/connecting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connecting"
            android:textColor="@color/white"
            android:textSize="30dp"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>